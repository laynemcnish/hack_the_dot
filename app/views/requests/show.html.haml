.container
  %div.header
    %h1.text-center Hippo Haus
  .middle-body
    .row
      %p#notice= notice 
    .row
      .col-md-6
        %h3 In #{@request.language.camelize}, '#{@request.body}' will be:

        .speech-bubble
          %h4 #{@request.result}

      .col-md-6
        #hippo
          - images = [ 'hippo-no.gif', 'hippo-regular.gif', 'hippo-yes.gif', 'hippo-winner.gif' ]
          = image_tag("#{images.sample}")

    = link_to 'Back', root_path
